<Window x:Class="CursValut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursValut"
        mc:Ignorable="d"
        Title="Курс валют" Icon="/Images/valuta.ico" Height="450" Width="800">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Text="Курс валют"
            Foreground="ForestGreen"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="40"/>
        <TextBox
            x:Name="rublesTB"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            Foreground="DarkOliveGreen"/>
        <ComboBox Grid.Row="2"
                  x:Name="currencyCB"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Width="150"
                  Height="20"
                  Foreground="LawnGreen">
            <ComboBoxItem>EUR</ComboBoxItem>
            <ComboBoxItem>USD</ComboBoxItem>
            <ComboBoxItem>CNY</ComboBoxItem>
        </ComboBox>
        <Button Grid.Column="1"
                x:Name="convertButton"
                Click="convertButton_Click"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Height="40"
                Width="350"
                Content="Конвертировать"
                FontSize="20"
                Foreground="ForestGreen"
                />
        <TextBlock
            x:Name="resultTB"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="30"
            Foreground="Purple"/>
    </Grid>
</Window>
